{
  "name": "mcp-typescript-starter",
  "version": "1.0.0",
  "description": "A production-ready TypeScript template for building MCP servers.",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "start:client": "tsx ./src/index.ts",
    "dev": "tsc --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "inspector": "npx @modelcontextprotocol/inspector node dist/index.js"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.26.0",
    "dotenv": "^17.2.3",
    "tsx": "^4.20.4",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.13",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.4.6",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.54.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
